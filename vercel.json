{
    "version": 2,
    "builds": [
      {
        "src": "app/api/**/*.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      {
        "src": "/api/(.*)",
        "dest": "/app/api/$1"
      },
      { "src": ".*", "dest": "/index.html" }
    ]
  }
  